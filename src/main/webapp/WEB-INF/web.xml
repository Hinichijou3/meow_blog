<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>多用户博客系统</display-name>
    
    <welcome-file-list>
        <welcome-file>default.jsp</welcome-file>
    </welcome-file-list>

    <!-- 核心Servlet配置 -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.yourblog.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.yourblog.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.yourblog.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

	<!-- 发布文章Servlet -->
	<servlet>
    	<servlet-name>PublishPostServlet</servlet-name>
    	<servlet-class>com.yourblog.controller.PublishPostServlet</servlet-class>
	</servlet>
	<servlet-mapping>
    	<servlet-name>PublishPostServlet</servlet-name>
    	<url-pattern>/publish-post</url-pattern>
	</servlet-mapping>
	
	<!-- 更新文章Servlet -->
	<servlet>
	    <servlet-name>UpdatePostServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.UpdatePostServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>UpdatePostServlet</servlet-name>
	    <url-pattern>/update-post</url-pattern>
	</servlet-mapping>
	
	<!-- 创建文章Servlet -->
	<servlet>
	    <servlet-name>CreatePostServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.CreatePostServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>CreatePostServlet</servlet-name>
	    <url-pattern>/create-post</url-pattern>
	</servlet-mapping>
	
	<!-- 删除文章Servlet -->
	<servlet>
	    <servlet-name>DeletePostServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.DeletePostServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>DeletePostServlet</servlet-name>
	    <url-pattern>/delete-post</url-pattern>
	</servlet-mapping>
	
	<!-- 更新资料Servlet -->
	<servlet>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <servlet-class>com.yourblog.controller.UpdateProfileServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>UpdateProfileServlet</servlet-name>
        <url-pattern>/update-profile</url-pattern>
    </servlet-mapping>
	
	<!-- 点赞Servlet -->
	<servlet>
	    <servlet-name>LikeServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.LikeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>LikeServlet</servlet-name>
	    <url-pattern>/like</url-pattern>
	</servlet-mapping>
	
	<!-- 收藏Servlet -->
	<servlet>
	    <servlet-name>FavoriteServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.FavoriteServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>FavoriteServlet</servlet-name>
	    <url-pattern>/favorite</url-pattern>
	</servlet-mapping>
	
	<!-- 投币Servlet -->
	<servlet>
	    <servlet-name>CoinServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.CoinServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>CoinServlet</servlet-name>
	    <url-pattern>/coin</url-pattern>
	</servlet-mapping>
	
	<!-- 每日硬币Servlet -->
	<servlet>
	    <servlet-name>DailyCoinServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.DailyCoinServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>DailyCoinServlet</servlet-name>
	    <url-pattern>/daily-coin</url-pattern>
	</servlet-mapping>
	
	<!-- 添加评论Servlet -->
	<servlet>
	    <servlet-name>AddCommentServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.AddCommentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>AddCommentServlet</servlet-name>
	    <url-pattern>/add-comment</url-pattern>
	</servlet-mapping>
	
	<!-- 删除评论Servlet -->
	<servlet>
	    <servlet-name>DeleteCommentServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.DeleteCommentServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>DeleteCommentServlet</servlet-name>
	    <url-pattern>/delete-comment</url-pattern>
	</servlet-mapping>
	
	<!-- 消息Servlet -->
	<servlet>
	    <servlet-name>MessageServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.MessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>MessageServlet</servlet-name>
	    <url-pattern>/messages</url-pattern>
	</servlet-mapping>
	
	<!-- 消息Servlet -->
	<servlet>
	    <servlet-name>UpdatePasswordServlet</servlet-name>
	    <servlet-class>com.yourblog.controller.UpdatePasswordServlet</servlet-class>
	</servlet>
	<servlet-mapping>
	    <servlet-name>UpdatePasswordServlet</servlet-name>
	    <url-pattern>/update-password</url-pattern>
	</servlet-mapping>
	    
    
</web-app>